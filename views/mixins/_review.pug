mixin review(review)
	.review__header
		.review__author
			img.avatar(src=review.author.gravatar, alt=review.author.name title=review.author.name)
			p= review.author.name
		.review__stars(title=`Rangert ${review.rating} av 5 stjerner`)
			= `★`.repeat(review.rating)
			= `☆`.repeat(5 - review.rating)
		time.review__time(datetime=review.created)= h.moment(review.created).fromNow()
	.review__body
		p= review.text